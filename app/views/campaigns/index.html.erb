<p id="notice"><%= notice %></p>

<h1>Campaigns</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Type</th>
      <th>Title</th>
      <th>Text</th>
      <th>Target</th>
      <th>Schedule</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.message_type %></td>
        <td><%= campaign.title %></td>
        <td><%= campaign.text %></td>
        <td><%= campaign.target %></td>
        <td><%= campaign.schedule %></td>
        <td><%= campaign.status %></td>
        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Campaign', new_campaign_path %>
