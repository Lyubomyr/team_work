<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Invitation Accepted At</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.invitation_accepted_at %></td>
        <td><%= link_to 'Edit', edit_organization_admin_user_path(user) %></td>
        <td><%= link_to 'Destroy', [:organization_admin, user], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <br>
  <br>
  <br>
  <br>
  <h3> Send invite to new user: </h3>
  <%= render 'form', url: send_invite_organization_admin_users_path, submit: 'Send Invite' %>
