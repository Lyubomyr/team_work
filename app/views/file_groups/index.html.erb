<h1>Listing File Groups</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @file_groups.each do |file_group| %>
      <tr>
        <td><%= file_group.name %></td>
        <td><%= file_group.description %></td>
        <td><%= file_group.position %></td>
        <td><%= link_to 'Show', file_group_path(file_group) %></td>
    <% end %>
  </tbody>
</table>



