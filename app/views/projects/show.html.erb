<div id="left"><p>

        <span style="color: green" >  Owner:  </span>
        <%= @project.owner.name%>
        <br><br>

                  <strong>Title:</strong>
                  <%= @project.title %>
                </p>
                <p>
                  <strong>City:</strong>
                  <%= @project.city %>
                </p>

                <p>
                  <strong>Text:</strong>
                  <%=urls_to_links(urls_to_images(@project.text))%>
                </p>

        <% if @project.owner == current_user %>
          <%= link_to 'Edit', edit_project_path(@project) %>
        <% end %>
        <%= link_to 'Back', projects_path %>
        </br>
        </br>

        <h1>Create Comment</h1>
        <%= render "projects/form_c" %>

        <%= render "projects/index_c" %>

</div>



<div id="right">
  <table>
    <span style="color: green" >  Users who added to current project:  </span>

   <% if @project.users.exists? %>
      <% @project.users.each do |user| %>
        <tr>
          <td><%= user.name%></td>
          <td>
            <% if @project.owner == current_user %>
              <%= link_to 'delete', del_project_path(:id_u => user.id) , method: :delete, data: { confirm: "Are you sure delete #{user.name}?" }%>
            <% end%>
          </td>
        </tr>
      <% end%>
    </table>
    <br>
  <% else %>
      <br><br>No added Users to current project<br>
  <%end%>

  <% if @project.owner == current_user && User.free_users(@project).present? %>
    <%= form_for( :id_k, url: {action: "add"})  do |f| %>
      <%= f.select("id", User.free_users(@project).collect {|p| [ p.name, p.id ]  }, include_blank: false) %>
      <%= f.submit "Add to my project" %>
    <% end %>
  <% end %>


    <br>
</div>
