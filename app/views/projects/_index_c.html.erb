

<h1>Listing Comments</h1>

<table>
  <thead>
    <tr>
      <th>Comments</th>
      <th>Date</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @comments.each do |comment| %>

      <tr>
          <td><%= comment.text %></td>
          <td>  <%= comment.created_at %> </td>
          <td> <%= link_to 'DELETE' ,[@project, comment], method: :delete%> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
