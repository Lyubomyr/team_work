  <% unless @novelty_categories.empty?%>
   <table class="table table-hover">
     <caption><b>All category:</b></caption>
      <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Color</th>
      </tr>
    </thead>
    <% @novelty_categories.each  do |category| %>
      <tr>
        <td  style="background-color: <%=category.color %> " ><span style="float: right"class="glyphicon glyphicon-hand-right"></span></td>
        <% if  @novelty.novelty_category_id.nil? %>
        <td><%= category.name  %></td>
        <td><%= category.color   %></td>
        <%else %>
        <td><%= best_in_place [:admin, @novelty, category],  :name  unless category.name.nil? %></td>
        <td><%= best_in_place [:admin, @novelty, category],  :color  unless category.color.nil? %></td>
        <td><%= link_to "", [:admin, @novelty, category] , :class => "glyphicon glyphicon-minus" ,method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end %>
      </tr>
     <%end %>
    </table>
    <%end %>