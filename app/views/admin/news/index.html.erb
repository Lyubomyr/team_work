<h1>Listing news</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Tag</th>
      <th></th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |new| %>
      <tr>
        <td><%= link_to new.title , admin_news_path(new) %></td>
        <td><%= new.body.at(0..35)%><%= link_to "...", admin_news_path(new) %></td>
        <td><%= new.tag %></td>
        <td><%= new.updated_at %></td>
        <td><%= link_to 'Edit' , edit_admin_news_path(new)%></td>
        <td><%= link_to 'Destroy', admin_news_path(new) ,method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New new' , new_admin_news_path %><br>
<%= link_to 'Back' , admin_path %>
